<configuration debug="false">
  <statusListener class="ch.qos.logback.core.status.NopStatusListener" />
  
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%-5level %-40.40logger{39}: %m%n</pattern>
    </encoder>
  </appender>

  <appender name="AUDIT" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>logs/solarssh-audit.log</file>
    <append>true</append>
    <immediateFlush>true</immediateFlush>

    <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
      <fileNamePattern>logs/solarssh-audit.%i.log.zip</fileNamePattern>
      <minIndex>1</minIndex>
      <maxIndex>50</maxIndex>
    </rollingPolicy>

    <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
      <maxFileSize>1MB</maxFileSize>
    </triggeringPolicy>
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level : %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="SolarSshService.AUDIT" level="info">
    <appender-ref ref="AUDIT" />
  </logger>
  
  <logger name="net.solarnetwork.solarssh" level="info"/>

  <root level="warn">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>